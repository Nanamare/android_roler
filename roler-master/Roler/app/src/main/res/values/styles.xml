<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#f0ffff</item>
        <item name="colorPrimaryDark">#6495ed</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/mdtp_transparent_black</item>
        <item name="actionMenuTextColor">@color/mdtp_transparent_black</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="colorControlActivated">@color/mdtp_button_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NoAppBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#6495ed</item>
        <item name="colorPrimary">#f0ffff</item>
        <item name="colorPrimaryDark">#6495ed</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/mdtp_transparent_black</item>
        <item name="actionMenuTextColor">@color/mdtp_transparent_black</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="colorControlActivated">@color/mdtp_button_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
