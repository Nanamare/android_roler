<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="300dp"
                android:layout_height="156dp">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="140dp"
        custom:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_roleItemTop"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#f5a4c8"
                android:paddingLeft="10dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_rolePrimaryPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="1"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_comma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_rolePrimaryPlan"
                    android:text="."
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_roleNamePlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_comma"
                    android:text="임시임시임시제목"
                    android:textSize="13sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_roleItemTop"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_roleContentPlan"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="역할 설명하는 곳"
                    android:textSize="10sp"/>


                <com.github.lzyzsd.circleprogress.CircleProgress
                    android:id="@+id/cp_planPercent"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    custom:circle_finished_color="#f5a4c1"
                    custom:circle_progress="100"
                    custom:circle_text_color="@color/primary"
                    custom:circle_text_size="10sp"
                    custom:circle_unfinished_color="#ffffff"/>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>