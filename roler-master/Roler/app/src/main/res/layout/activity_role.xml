<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:coverflow="http://schemas.android.com/apk/res-auto"
                tools:context="com.buttering.roler.plan.PlanActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/abcde"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/rl_profileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:textSize="25sp"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kozy brown"
            android:layout_centerVertical="true"/>

        <Button
            android:layout_alignBaseline="@+id/tv_name"
            android:id="@+id/bt_editProfile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_menu"
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginLeft="8dp"/>
        </LinearLayout>

        <TextView
            android:layout_below="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roler@roler.com"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_recyclerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_profileLayout"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_editRoleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="역할 정보 추가"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_above="@+id/vp_roleDetail"
            android:id="@+id/bt_editRoleInfo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_menu"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_editRoleInfo"/>

        <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
            android:id="@+id/vp_roleDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_editRoleInfo"
            coverflow:coverHeight="200dp"
            coverflow:coverWidth="170dp"
            coverflow:maxScaleFactor="1.5"
            coverflow:reflectionGap="0px"
            coverflow:rotationThreshold="0.5"
            coverflow:scalingThreshold="0.5"
            coverflow:spacing="0.6">
        </it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow>

        <!--<android.support.v4.view.ViewPager-->
        <!--android:id="@+id/vp_roleDetail"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@id/tv_editRoleInfo"-->
        <!--android:layout_marginTop="10dp">-->
        <!--</android.support.v4.view.ViewPager>-->

    </RelativeLayout>

    <TextView
        android:text="My profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_picture"
        android:layout_toStartOf="@+id/rl_profileLayout"/>

</RelativeLayout>