<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:cardCornerRadius="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_roleItemTop"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#f5a4c8"
                android:paddingTop="5dp"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/tv_rolePrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="1"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/tv_comma"
                    android:layout_toRightOf="@id/tv_rolePrimaryPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="."
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_roleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_comma"
                    android:text="임시임시임시제목"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_action_settings"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_roleItemTop"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp">


                <TextView
                    android:id="@+id/activity_role_title"
                    android:textSize="15sp"
                    android:text="단기목표"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>


                <TextView
                    android:textSize="10sp"
                    android:id="@+id/activity_role_subTitle"
                    android:text="역할을 위한 단기 목표 설정하기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_role_title"
                    android:layout_alignParentStart="true"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/activity_role_ll_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_role_subTitle"
                    android:layout_alignParentStart="true">


                    <TextView
                        android:id="@+id/tv_roleContent"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="임시임시임시 내용내용 내욘ㄴ언아렁니ㅏ렁나ㅣ"
                        android:textSize="10sp"
                        android:layout_below="@+id/activity_role_title"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="23dp"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/activity_role_achive_tv"
                    android:text="성취율"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_above="@+id/activity_role_frame_achivement"
                    android:layout_alignStart="@+id/activity_role_frame_achivement"/>

                <FrameLayout
                    android:id="@+id/activity_role_frame_achivement"
                    android:background="#f0ffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true">

                    <com.github.lzyzsd.circleprogress.CircleProgress
                        android:id="@+id/cp_rolePercent"
                        custom:circle_unfinished_color="#ffffff"
                        custom:circle_text_color="@color/com_facebook_blue"
                        custom:circle_finished_color="#f5a4c8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        custom:circle_progress="35"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"/>
                </FrameLayout>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>