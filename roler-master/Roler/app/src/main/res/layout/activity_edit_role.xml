<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_editRoleTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_roleNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="역할제목"/>

        <EditText
            android:id="@+id/et_roleName"
            android:layout_toRightOf="@id/tv_roleNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_editRoleContent"
        android:layout_below="@id/rl_editRoleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_roleContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단기목표"/>

        <EditText
            android:id="@+id/et_roleContent"
            android:layout_toRightOf="@id/tv_roleContentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>